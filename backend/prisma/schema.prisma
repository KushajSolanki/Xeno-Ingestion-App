generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  shopUrl   String
  apiToken  String
  createdAt DateTime  @default(now())

  customers Customer[]
  products  Product[]
  orders    Order[]
  events    Event[]
}

model Customer {
  id        Int       @id @default(autoincrement())
  tenantId  Int
  shopifyId String    @unique
  email     String?
  firstName String?
  lastName  String?
  phone     String?
  createdAt DateTime  @default(now())

  tenant    Tenant    @relation(fields: [tenantId], references: [id])
  orders    Order[]
}

model Product {
  id        Int       @id @default(autoincrement())
  tenantId  Int
  shopifyId String    @unique
  title     String
  price     Float
  createdAt DateTime  @default(now())

  tenant     Tenant     @relation(fields: [tenantId], references: [id])
  orderItems OrderItem[]
}

model Order {
  id         Int        @id @default(autoincrement())
  tenantId   Int
  shopifyId  String     @unique
  totalPrice Float
  createdAt  DateTime

  tenant     Tenant     @relation(fields: [tenantId], references: [id])
  items      OrderItem[]
  customerId Int?
  customer   Customer?  @relation(fields: [customerId], references: [id])
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  title     String
  quantity  Int
  price     Int

  orderId   Int
  order     Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId Int?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
}


model Event {
  id        Int       @id @default(autoincrement())
  tenantId  Int
  type      String
  payload   Json
  createdAt DateTime  @default(now())

  tenant    Tenant    @relation(fields: [tenantId], references: [id])
}
